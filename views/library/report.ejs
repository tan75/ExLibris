<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/book.css">
    <link rel="stylesheet" href="css/report.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
<main>
  <div class="report__card">
    <% if (books.length > 0) { %>
      <p>Book Name / Total Pages</p>
      <ul>
        <% books.forEach(b => { %>
        <li><%= b.title %> &emsp; (<%= b.pages %>) </li>
        <% }) %>
      </ul>
      
    <% } else { %>
      <h1>No Books in the Report</h1>
    <% } %>

    <% if (totalPages !== 0) { %>
      <p>Total Pages in the Report: &emsp; <%= totalPages %></p>
    <% } else { %>
      <p>Total Pages in the Report: 0</p>
    <% } %>
  </div>
</main>

<%- include('../includes/end.ejs') %>