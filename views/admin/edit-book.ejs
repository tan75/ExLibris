<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/book.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if(errorMessage) { %>
      <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="book-form" action="/admin/<% if (editing) { %>edit-book<%} else { %>add-book<% } %>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<% if (editing) { %><%= book.title %><% } else { %><%= oldInput.book.title %><% } %>">
      </div>
      <div class="form-control">
        <label for="imageUrl">ImageUrl</label>
        <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= book.imageUrl %><% } else { %><%= oldInput.book.imageUrl %><% } %>">
      </div>
      <div class="form-control">
        <label for="pages">Pages</label>
        <input type="number" name="pages" id="pages" value="<% if (editing) { %><%= book.pages %><% } else { %><%= oldInput.book.pages %><% } %>">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="5"><% if (editing) { %><%= book.description %><% } else { %><%= oldInput.book.description %><% } %></textarea>
      </div>

      <% if (editing) { %>
       <input type="hidden" value="<%= book._id %>" name="bookId">
      <% } %>

      <button class="btn" type="submit"><% if (editing) { %> Update Book <% } else { %> Add Book <% } %></button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>