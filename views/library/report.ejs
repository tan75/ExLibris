<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/book.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
<main>
  <% if (books.length > 0) { %>
    <p>Book Name / Total Pages</p>
    <ul>
      <% books.forEach(b => { %>
        <li><%= b.title %> (<%= b.pages %>) </li>
      <% }) %>
    </ul>

  <% } else { %>
    <h1>No Books in the Report</h1>
  <% } %>
  <% if (totalPages !== 0) { %>
  <p>Total Pages in the Report:</p>
  <p><%= totalPages %></p>
  <% } else { %>
    <p>Total Pages in the Report:</p>
    <p> 0 </p>
  <% } %>
</main>

<%- include('../includes/end.ejs') %>